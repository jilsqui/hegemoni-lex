// prisma/schema.prisma

// 1. KONFIGURASI KONEKSI
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // URL utama (Transaction)
  url       = env("DATABASE_URL")
  // URL migrasi (Session)
  directUrl = env("DIRECT_URL")
}

// 2. ENUM
enum Role {
  ADMIN   // Pengelola Penuh
  WRITER  // Penulis Konten
  READER  // Pembaca Biasa
}

enum ArticleStatus {
  DRAFT     // Masih ditulis
  PENDING   // Menunggu persetujuan
  PUBLISHED // Tayang
  REJECTED  // Ditolak
}

// --- TAMBAHAN BARU (Wajib ada biar tidak error) ---
enum GalleryStatus {
  PENDING   // Menunggu persetujuan Admin
  APPROVED  // Sudah tayang di web
  REJECTED  // Ditolak
}

// 3. MODEL USER
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  image         String?
  bio           String?
  role          Role      @default(READER)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relasi
  articles      Article[]
  comments      Comment[]
  ratings       Rating[]
  reports       Report[]
}

// 4. MODEL ARTICLE
model Article {
  id            String        @id @default(cuid())
  title         String
  slug          String        @unique
  content       String        @db.Text
  excerpt       String?
  image         String?
  category      String

  // STATUS & FITUR KHUSUS
  status        ArticleStatus @default(DRAFT)
  isFeatured    Boolean       @default(false) 

  // WAKTU
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  publishedAt   DateTime?

  // RELASI
  authorId      String
  author        User          @relation(fields: [authorId], references: [id])
  comments      Comment[]
  ratings       Rating[]
}

// 5. MODEL VISITOR
model Visitor {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userAgent String?
}

// 6. MODEL COMMENT
model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
}

// 7. MODEL RATING
model Rating {
  id        String   @id @default(cuid())
  value     Int

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
}

// 8. MODEL REPORT
model Report {
  id        String   @id @default(cuid())
  subject   String
  message   String
  type      String   
  
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

// 9. MODEL GALLERY (SUDAH DIPERBAIKI)
model Gallery {
  id          String        @id @default(cuid())
  title       String?  
  imageUrl    String        // Link foto dari Supabase Storage
  description String?  
  
  // KOLOM BARU (Ini yang bikin error tadi karena belum ada)
  status      GalleryStatus @default(PENDING) 
  uploaderId  String?       
  
  createdAt   DateTime      @default(now())
}